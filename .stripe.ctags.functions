#!/usr/bin/env bash

# retag - build tag file again
retag() {
  DIR=$1
  if [ -z "$1" ]; then
    echo "WARN: no argument provided.. assuming 'pay-server'"
    DIR=pay-server
  fi

  echo "retagging $DIR ..."
  cd ~/stripe/$DIR
  bundle install --path=vendor/bundle-local --binstubs=.binstubs
  ripper-tags -f .tags-building -R --exclude=node_modules --exclude=puppet-config --exclude=build/autoloader --exclude=ruby-typer
  mv -f .tags-building .tags
  echo "done."
}

