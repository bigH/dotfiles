# retag - build tag file again
retag() {
  DIR=$1
  if [ -z "$1" ]; then
    echo "WARN: no argument provided.. assuming 'pay-server'"
    DIR=pay-server
  fi

  echo "retagging $DIR ..."
  cd ~/stripe/$DIR
  ripper-tags -f .tags -R --exclude=node_modules --exclude=puppet-config --exclude=build/autoloader --exclude=ruby-typer
  echo "done."
}

