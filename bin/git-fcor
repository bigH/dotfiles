#!/usr/bin/env bash

# TODO doesn't work - doesn't give logical name to local branch
git_fcor() {
  local branches target
  branches=$(git branch --remotes | grep -v HEAD | cut -c3-) || return
  target=$(echo "$branches" |
           fzf --no-hscroll --no-multi \
               --ansi --preview="git log -30 --pretty=format:%s {}") || return
  echo git checkout -b $(echo "$target" | cut -d'/' -f2-) $(echo "$target")
}

git_fcor
