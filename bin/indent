#!/usr/bin/env bash

# this nicely indents both stderr and stdout
print_arg_with_quotes() {
  if [[ "$1" = *' '* ]]; then
    echo "'$1'"
  else
    echo "$1"
  fi
}

indent() {
  if [ -n "$1" ] && [ "$1" = "--header" ]; then
    echo
    shift
    if [ -t 1 ]; then
      printf "%s" "$(tput setaf 2)" "$(tput bold)"
    fi
    printf "\$ $1"
    if [ -t 1 ]; then
      printf "%s" "$(tput sgr0)" "$(tput setaf 4)"
    fi
    REST=""
    for arg in "$@"; do
      if [ -n "$REST" ]; then
        printf " %s" "$(print_arg_with_quotes "$arg")"
      fi
      REST="YES"
    done
    if [ -t 1 ]; then
      printf "%s" "$(tput sgr0)"
    fi
    echo
  fi

  { "$@" 2>&3 | sed >&2 's/^/    /'; } 3>&1 1>&2 | sed 's/^/    /';
}

indent "$@"
