#!/usr/bin/env bash

source "$DOT_FILES_DIR/sh_utils.sh"

if [ -t 1 ]; then
  # use plain style to avoid line numbers and git info
  if command_exists batcat; then
    command batcat --style=plain "$@"
  elif command_exists bat; then
    command bat --style=plain "$@"
  else
    command cat "$@"
  fi
else
  command cat "$@"
fi
