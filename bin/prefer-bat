#!/usr/bin/env bash

if [ -t 1 ]; then
  # use plain style to avoid line numbers and git info
  if type batcat >/dev/null 2>&1; then
    command batcat --style=plain "$@"
  elif type bat >/dev/null 2>&1; then
    command bat --style=plain "$@"
  else
    command cat "$@"
  fi
else
  command cat "$@"
fi
